{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "outDir": "./dist/ui",
    "rootDir": "./src/ui",
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "jsx": "react-jsx",
    "baseUrl": "./src/ui",
    "paths": {
      "@/*": ["*"],
      "@/types": ["types"],
      "@/services/*": ["services/*"],
      "@/hooks/*": ["hooks/*"],
      "@/components/*": ["components/*"],
      "@/pages/*": ["pages/*"]
    }
  },
  "include": ["src/ui/**/*", "src/shared/**/*"],
  "exclude": ["src/server/**/*", "src/grpc/**/*", "**/*.test.*"]
}